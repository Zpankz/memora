{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/run-hook.sh ${CLAUDE_PLUGIN_ROOT}/scripts/session_start.py",
            "timeout": 10
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/run-hook.sh ${CLAUDE_PLUGIN_ROOT}/scripts/post_tool_use.py",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/run-hook.sh ${CLAUDE_PLUGIN_ROOT}/scripts/stop_hook.py",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
